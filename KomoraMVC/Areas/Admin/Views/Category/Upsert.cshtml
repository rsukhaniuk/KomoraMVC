@model Category

<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        
        <div class="row pb-2">
            <h4>@(Model.Id!=0?"Update":"Create") Category</h4>
            <hr/>
        </div>
        <input asp-for="Id" hidden />
        <div asp-validation-summary="All"></div>
        <div class="row">
            <div class="col-12">
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label pb-1"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="row">
                    @if (Model.Id != 0)
                    {
                        <div class="col-6 col-md-3">
                            <button asp-area="Admin" type="submit" class="btn btn-primary form-control" style="height:50px">Edit</button>
                        </div>
                    }
                    else
                    {
                        <div class="col-6 col-md-3">
                            <button asp-area="Admin" type="submit" class="btn btn-primary form-control" style="height:50px">Create</button>
                        </div>
                    }
                    <div class="col-6 col-md-3">
                        <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control d-flex justify-content-center align-items-center" style="height: 50px">
                            Category List
                        </a>
                    </div>
                </div>
            </div>
        </div>

        
        

    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
