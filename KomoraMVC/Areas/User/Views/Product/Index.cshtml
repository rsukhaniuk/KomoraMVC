@model List<Product>


<div class="container">
    <div class="card-body p-4">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-black">Product List</h2>
            </div>
            <div class="col-6 text-end">
                @if (User.IsInRole(SD.Role_Admin))
                {
                    <a asp-area="Admin" asp-controller="Product" asp-action="Upsert" class="btn btn-success float-right">Create</a>
                }
            </div>
        </div>
        <table id="tblData" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Quantity</th>
                    <th>Unit</th>
                    @if (User.IsInRole(SD.Role_Admin))
                    {
                    <th></th>
                    }
                    else
                    {
                    }
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        // Set the isAdmin variable based on server-side logic

        var isAdmin = @User.IsInRole("Admin").ToString().ToLower(); // "true" or "false"

        var dataTable;

        $(document).ready(function () {
            console.log(isAdmin)
            loadDataTable();
        });

        function loadDataTable() {
            if (isAdmin) {
                dataTable = $('#tblData').DataTable({
                    "ajax": { url: '/user/product/getall' },
                    "columns": [
                        { data: 'id', "width": "5%" },
                        { data: 'name', "width": "20%" },
                        { data: 'price', "width": "10%" },
                        { data: 'category.name', "width": "20%" },
                        { data: 'quantity', "width": "10%" },
                        { data: 'unit.name', "width": "10%" },
                        {
                            data: 'id',
                            "render": function (data) {

                                return `<div class="w-75 btn-group" role="group">
                                 <a href="/admin/product/upsert?id=${data}" class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                                  <a onClick=Delete('/admin/product/delete/${data}') class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                                </div>`
                            },
                            "width": "25%"
                        }
                    ]
                });
            }
            else {
                dataTable = $('#tblData').DataTable({
                    "ajax": { url: '/user/product/getall' },
                    "columns": [
                        { data: 'id', "width": "10%" },
                        { data: 'name', "width": "30%" },
                        { data: 'price', "width": "15%" },
                        { data: 'category.name', "width": "25" },
                        { data: 'quantity', "width": "10%" },
                        { data: 'unit.name', "width": "10%" }
                    ]
                });
            }
        }

        function Delete(url) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: url,
                        type: 'DELETE',
                        success: function (data) {
                            dataTable.ajax.reload();
                            toastr.success(data.message);
                        }
                    })
                }
            })
        }

    </script>
    @* <script src="~/js/product.js"></script> *@
    
}