@model ProductRecipeVM

<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">

        <div class="row pb-2">
            <h4>@(Model.ProductRecipe.Id != 0 ? "Update" : "Create") ProductRecipe</h4>
            <hr />
        </div>
        <input asp-for="ProductRecipe.Id" hidden />
        <div asp-validation-summary="All"></div>
        <div class="row">
            <div class="col-10">
                <div class="form-group mb-3">
                    <label asp-for="ProductRecipe.RecipeId" class="control-label pb-1"></label>
                    <select asp-for="@Model.ProductRecipe.RecipeId" asp-items="@Model.RecipeList" class="form-select">
                        <option disabled selected>Select Recipe</option>
                    </select>
                    <span asp-validation-for="ProductRecipe.RecipeId" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ProductRecipe.ProductId" class="control-label pb-1"></label>
                    <select asp-for="@Model.ProductRecipe.ProductId" asp-items="@Model.ProductList" class="form-select">
                        <option disabled selected>Select Product</option>
                    </select>
                    <span asp-validation-for="ProductRecipe.ProductId" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ProductRecipe.Quantity" class="control-label pb-1"></label>
                    <input asp-for="ProductRecipe.Quantity" class="form-control" />
                    <span asp-validation-for="ProductRecipe.Quantity" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ProductRecipe.UnitId" class="control-label pb-1"></label>
                    <select asp-for="@Model.ProductRecipe.UnitId" asp-items="@Model.UnitList" class="form-select">
                        <option disabled selected>Select Unit</option>
                    </select>
                    <span asp-validation-for="ProductRecipe.UnitId" class="text-danger"></span>
                </div>
                <div class="row">
                    @if (Model.ProductRecipe.Id != 0)
                    {
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-primary form-control" style="height:50px">Edit</button>
                        </div>
                    }
                    else
                    {
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-primary form-control" style="height:50px">Create</button>
                        </div>
                    }
                    <div class="col-6 col-md-3">
                        <a asp-controller="ProductRecipe" asp-action="Index" class="btn btn-secondary form-control d-flex justify-content-center align-items-center" style="height: 50px">
                            ProductRecipe List
                        </a>
                    </div>
                </div>
            </div>

        </div>




    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
