@model List<Recipe>


<div class="container">
    <div class="card-body p-4">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-black">Recipe List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Recipe" asp-action="Upsert" class="btn btn-success float-right">Create</a>
            </div>
        </div>
        <table id="tblData" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>CookingTime</th>
                    <th>Preparation</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/recipe.js"></script>
}